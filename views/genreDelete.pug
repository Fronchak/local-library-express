extends layout 

block content 

    h1 #{title}: #{genre.name} 

    if genreBooks.length 

        p #[strong Delete the following books before attempting delete this genre.] 

        h4 Books 
        div(style="margin-left:20px;margin-top:20px;")  
            dl
            each book in genreBooks 
                dt 
                    a(href=book.url) #{book.title} 
                dd #{book.summary} 

    else 

        p Do you really want to delete this genre ?
        form(method="POST" action="") 
            div.form-group 
                input#genreid.form-control(type="hidden" name="genreid" required="true" value=genre._id)
            button.btn.btn-primary(type="submit") Delete

